{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "removeComments": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "exclude": ["**/node_modules", "node_modules", "dist", "**/dist"]
}
