{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["node", "express"],
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"],
      "@lib/*": ["lib/*"],
      "@errors/*": ["errors/*"],
      "@db/*": ["database/*"],
      "@middlewares/*": ["middlewares/*"],
      "@types/*": ["types/*"],
      "@api/*": ["api/*"]
    }
  },
  "include": ["src", "src/database/config.ts", "src/types", "src/*.ts"],
}
