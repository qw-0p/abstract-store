{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "types": ["node", "express"],
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"],
      "@utils/*": ["utils/*"],
      "@errors/*": ["errors/*"],
      "@db/*": ["database/*"],
      "@middlewares/*": ["api/middlewares/*"],
      "@pTypes/*": ["types/*"],
      "@api/*": ["api/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
}
